{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./outputjs",
    "rootDir": "./main",  //改为 ./main,避免生成 main 文件夹
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,  //改为 false,不生成 .d.ts 文件
    "declarationMap": false,  //改为 false,不生成 .d.ts.map 文件
    "sourceMap": false,  //已经是 false,不生成 .js.map 文件
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "main/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}